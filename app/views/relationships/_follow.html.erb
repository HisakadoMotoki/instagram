<% if user_signed_in? %>
  <% if current_user != @user %>
    <% if @user.followed_by?(current_user) %>
      <%= link_to "フォロー済", user_relationships_path(@user.id), method: :delete %>
    <% else %>
      <%= link_to "フォロー", user_relationships_path(@user.id), method: :post %>
    <% end %>
  <% end %>
<% end %>
