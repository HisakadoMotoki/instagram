<i color="red" class="far fa-heart"></i>
<div class="">
  <div class="container">
    <div class="row">
      <div class="col-sm">
        <div class="fixed">
          <%#= render 'relationships/follow' %>
          <% if user_signed_in? %>
            <% if current_user != @user %>
              <% if @user.followed_by?(current_user) %>
                <%= link_to "フォロー済", user_relationships_path(@user.id), method: :delete %>
              <% else %>
                <%= link_to "フォロー", user_relationships_path(@user.id), method: :post %>
              <% end %>
            <% end %>
          <% end %>

          |<%= link_to '戻る', users_path %><br>
          <%= gravatar_for @user %> <br>
          <%= link_to "フォロー中[#{@user.active_relationships.count}]", follows_user_path %>|
          <%= link_to "フォロワー[#{@user.passive_relationships.count}]", followers_user_path %> <br>
          <%=  "username: #{@user.username}<br>".html_safe if @user.username? %>
          <%=  "name: #{@user.name}<br>".html_safe if @user.name? %> 
          <%=  "link: #{@user.link}<br>".html_safe if @user.link? %>
          <%=  "sex: #{@user.sex}<br>".html_safe if @user.sex?%>
          <%=  "profile: #{@user.profile}<br>".html_safe if @user.profile? %> <br>
        </div>
      </div>
      <div class="col-sm color1">
          <div class="">
            <%= render 'pictures/picture', obj: @user.pictures %>
          </div>
      </div>
      <div class="col-sm color2">
          <div class="">
            <%= render 'pictures/fav_picture', obj: @favorite_pictures %>
          </div>
      </div>
    </div>
  </div>
</div>
